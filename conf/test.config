/*
~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
    Nextflow config file for running minimal tests
~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
    Defines input files and everything required to run a fast and simple pipeline test.

    Use as follows:
        nextflow run nf-core/rnaseqpipeline -profile test,<docker/singularity> --outdir <OUTDIR>

----------------------------------------------------------------------------------------
*/

process {
    resourceLimits = [
        cpus: 4,
        memory: '15.GB',
        time: '1.h'
    ]
}

params {
    config_profile_name        = 'Test profile'
    config_profile_description = 'Minimal test dataset to check pipeline function'

    // Input data - using local test samplesheet
    input = 'samplesheet.csv'
    
    // Output directory
    outdir = './results/'
    
    // Genome references
    genome = 'GRCm38'
    igenomes_base = 's3://ngi-igenomes/igenomes'
    
    // FastQC options
    fastqc_threads = '32'
    
    // TrimGalore options
    trimgalore_min_length = '20'
    trimgalore_min_qual = '20'
    
    // STAR alignment options
    readFilesCommand = 'zcat'
    outSAMtype = 'BAM SortedByCoordinate'
    
    // Picard options
    picard_prefix = 'picard'
    
    // Reference genome configuration
    igenomes_reference = 'GRCm38'
}
