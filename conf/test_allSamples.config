/*
~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
    Nextflow config file for replicating the RNA-seq pipeline test run
~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
    This configuration replicates the exact parameters used in the successful test run.
    
    Use as follows:
        nextflow run main.nf -profile test_replication,conda
    
    Or with explicit parameters:
        nextflow run main.nf --input samplesheet_allSamples.csv --outdir ./results/ --genome GRCm38 --igenomes_base s3://ngi-igenomes/igenomes -c conf/test_replication.config -profile conda

----------------------------------------------------------------------------------------
*/


process {
    resourceLimits = [
        cpus: 4,
        memory: '15.GB',
        time: '1.h'
    ]
}


params {
    config_profile_name        = 'Test Replication Profile'
    config_profile_description = 'Configuration to replicate successful RNA-seq pipeline test run'

    // Input/Output
    input = 'samplesheet_allSamples.csv'
    outdir = './results/'
    
    // Reference genome configuration
    genome = 'GRCm38'
    igenomes_base = 's3://ngi-igenomes/igenomes'
    igenomes_reference = 'GRCm38'
    
    // FastQC configuration
    fastqc_threads = '32'
    
    // TrimGalore configuration
    trimgalore_min_length = '20'
    trimgalore_min_qual = '20'
    
    // STAR alignment configuration  
    readFilesCommand = 'zcat'
    outSAMtype = 'BAM SortedByCoordinate'
    
    // Picard configuration
    picard_prefix = 'picard'

    // MERGESTRINGTIE options
    genetable_outfile = 'gene_table_TPM'
    
    // Validation
    validate_params = true
}